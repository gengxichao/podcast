/**index.wxss**/
.titlebar{
  width: 100%;
  height: 50rpx;
  background-color: black;
  position: fixed;
  z-index: 10;
}
.titlebar_padding{
  width: 100%;
  height: 50rpx;
}
#user_name{
  color: #ffffff;
  font-size: 30rpx;
  float: right;
}
.banner {
  width: 100%;
  height: 150rpx;
  background-color: blue;
}
.banner_text{
  float: left;
  vertical-align: middle;
  margin-top: 50rpx;
  margin-left: 20rpx;
}
.banner_num{
  float: right;
  vertical-align: middle;
  margin-top: 50rpx;
  margin-right: 20rpx;
}
.displaybar{
  width:100%;
  height: 300rpx;
  white-space: nowrap;
  display: flex;
  font-size: 0;
}
.show_box{
  height: 260rpx;
  width: 180rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  display: inline-block;
}
.show_pic{
  height: 180rpx;
  width: 180rpx;
  background-color: red;
  display: inline-block;
}
.show_detail{
  height: 80rpx;
  width: 180rpx;
  background-color: greenyellow;
  color: #ffffff;
  font-size: 30rpx;
  float: right;
}
.more{
  height: 100rpx;
  width: 100rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
  background-color: cornflowerblue;
  display: inline-block;
}
.navigator_padding{
  height: 125rpx;
}
.navigator{
  width: 100%;
  height: 125rpx;
  position: fixed;
  bottom: 0;
  z-index: 10;
  background-color: #000000;
  color:#ffffff;
}