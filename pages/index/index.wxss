/**index.wxss**/
.titlebar{
  width: 100%;
  height: 50rpx;
  background-color: black;
}
#user_name{
  color: #ffffff;
  font-size: 30rpx;
  float: right;
}
.banner {
  width: 100%;
  height: 150rpx;
  background-color: blue;
}
.banner_text{
  float: left;
  vertical-align: middle;
  margin-top: 50rpx;
  margin-left: 20rpx;
}
.banner_num{
  float: right;
  vertical-align: middle;
  margin-top: 50rpx;
  margin-right: 20rpx;
}
.displaybar{
  width: 100%;
  height: 200rpx;
}
.show_box{
  height: 160rpx;
  width: 160rpx;
  background-color: #ccc;
  float: left;
  margin-left: 50rpx;
  margin-top: 20rpx;
}
.more{
  float: left;
  height: 20rpx;
  width: 20rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
}
.footer{
  width: 100%;
  height: 100rpx;
  position: fixed;
  background-color: #000000;
}