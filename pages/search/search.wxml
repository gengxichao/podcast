<!--Search-->
<view id="search">Search</view>
<form id="form" bindsubmit="formBindsubmit"> 
    <input id="input_detail" name="search_thing" auto-focus="true"/>
    <view id="selection">
        <picker value="{{index}}" range="{{array}}" bindchange="listenerPickerSelected">
        <view>
            search byï¼š{{array[index]}}
        </view>
        </picker>
    </view>
    <button id="icon_button" formType="submit"><icon  type="search" color="skyblue"></icon></button>
</form>
<scroll-view id="result" scroll-y="true">
    <view class="long_show_box" wx:for="{{result}}" wx:for-item="item">
        <image class="show_pic" src="{{item.img_path}}" mode="aspectFit"></image>
        <view class="show_detail">{{item.img_name}}</view>
    </view>
</scroll-view>
