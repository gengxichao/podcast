#title{
    height: 70rpx;
    width: 100%;
    text-align: center;
    margin-top: 50rpx;
    font-size: 50rpx;
    border-width: 0 0 2rpx 0;
    border-style: solid;
    border-color: #ccc;
    font-family: "Verdana";
}
.upload_box{
    height: 410rpx;
    width: 90%;
    margin-top: 20rpx;
    margin-left: 30rpx;
    border-width: 2rpx;
    border-style: solid;
    border-color: #ccc;
    font-family: "Verdana";
}
.subtitle{
    float: left;
    margin-left: 20rpx;
    margin-top: 10rpx;
}
#choose_pic{
    margin-top: 10rpx;
    font-size: 30rpx;
    width: 30%;
    height: 70rpx;
    background-color: skyblue;
}
#preview{
    margin-top: 10rpx;
    height: 300rpx;
    width: 300rpx;
    border-width: 1rpx;
    border-style: solid;
    border-color: #ccc;
}
#finish_button{
    margin-top: 20rpx;
    width: 80%;
    background-color: skyblue;
}
#start_record{
    margin-top: 10rpx;
    font-size: 30rpx;
    width: 30%;
    background-color: skyblue;
}